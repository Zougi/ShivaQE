<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	x:Class="ShivaQEmaster.NotifyWindow"
	x:Name="Window"
	Title="NotifyWindow"
	Width="400" Height="88.5"
	Background="White" Opacity="0.8"
	ResizeMode="NoResize" WindowStyle="None" MouseDown="Window_MouseDown" AllowsTransparency="True" Topmost="True">

	<Grid x:Name="LayoutRoot">
		<TextBlock x:Name="tb_warning" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Warning" VerticalAlignment="Top" Height="68.5" Width="252" Foreground="Black" FontSize="16"/>
		<Rectangle Fill="#FFFBA92C" HorizontalAlignment="Left" Height="88.5" Width="115"/>
		<Button x:Name="bt_close" Content="X" HorizontalAlignment="Left" Margin="370,0,0,0" VerticalAlignment="Top" Width="30" Background="{x:Null}" Click="bt_close_Click"/>
		<Image x:Name="img_slave" HorizontalAlignment="Left" Height="64" Margin="25,12.5,0,0" VerticalAlignment="Top" Width="64"/>
	</Grid>
</Window>