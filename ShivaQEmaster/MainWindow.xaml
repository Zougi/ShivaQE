<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:ShivaQEmaster" mc:Ignorable="d" x:Class="ShivaQEmaster.MainWindow"
        Title="ShivaQE" Height="300" Width="710" ResizeMode="CanMinimize" BorderThickness="1" BorderBrush="DarkOrange" WindowTitleBrush="DarkOrange" WindowTransitionsEnabled="False">
    <Controls:MetroWindow.Resources>
        <local:MainWindowBindings x:Key="MainWindowBindingsDataSource" d:IsDataSource="True"/>
    </Controls:MetroWindow.Resources>
	<Controls:MetroWindow.RightWindowCommands>
		<Controls:WindowCommands>
		    <Button x:Name="bt_help" Click="bt_help_Click" Content="Help" />
		</Controls:WindowCommands>		
	</Controls:MetroWindow.RightWindowCommands>
    <Grid DataContext="{Binding Source={StaticResource MainWindowBindingsDataSource}}">
		<Grid Margin="224,208,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="57">
			<Grid.RowDefinitions>
				<RowDefinition Height="12*"/>
				<RowDefinition Height="23*"/>
			</Grid.RowDefinitions>
			<Label x:Name="lb_host" Content="IP (0.0.0.0)" HorizontalAlignment="Left" Height="25.333" Margin="26.974,18.506,0,0" VerticalAlignment="Top" Width="76" Grid.RowSpan="2" FontStyle="Italic" Foreground="#FF404040" Visibility="{Binding newSlaveIP_label, Mode=OneWay}"/>
			<TextBox x:Name="tb_host" HorizontalAlignment="Left" Height="23" Margin="19.667,18.838,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.RowSpan="2" Text="{Binding newSlaveIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="{x:Null}" KeyDown="tb_host_KeyDown" />
            <Label x:Name="lb_name" Content="Friendly name" HorizontalAlignment="Left" Height="25.333" Margin="181.051,18.506,0,0" VerticalAlignment="Top" Width="88" Grid.RowSpan="2" FontStyle="Italic" Foreground="#FF404040" Visibility="{Binding newSlaveName_label, Mode=OneWay}"/>
			<TextBox x:Name="tb_name" HorizontalAlignment="Left" Height="23" Margin="168,18.838,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.RowSpan="2" Text="{Binding newSlaveName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="{x:Null}" KeyDown="tb_name_KeyDown"/>
			<Button x:Name="bt_add" Margin="308,12,0,0" Grid.RowSpan="2" Click="bt_add_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Orange" Height="36.839" Width="66" Content="Add" FontSize="18.667" Cursor="Hand" FontWeight="Bold" />
			<Rectangle HorizontalAlignment="Left" Height="57" Stroke="Black" VerticalAlignment="Top" Width="383.334" StrokeThickness="0.5" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2"/>
		</Grid>
		<ListView x:Name="lv_slaves" HorizontalAlignment="Left" Height="168" Margin="224,35,0,0" VerticalAlignment="Top" Width="342.812" ItemsSource="{Binding slaves, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding slaveSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Ip" Width="95">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding ipAddress}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Name" Width="145">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding name}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Status" Width="90">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding status}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<Grid Margin="10,192.927,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" Height="69.073">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75*"/>
				<ColumnDefinition Width="181*"/>
			</Grid.ColumnDefinitions>
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" FontSize="18.667" Width="129" Text="Live broadcast" Margin="0,14,0,0" Grid.ColumnSpan="2"/>
			<Button x:Name="bt_livebroadcast_on" Margin="59,21.193,0,0" TouchDown="bt_livebroadcast_on_Click" Click="bt_livebroadcast_on_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Visibility="Hidden">
				<Button.Template>
					<ControlTemplate TargetType="{x:Type Button}">
						<ContentPresenter />
					</ControlTemplate>
				</Button.Template>
				<TextBlock TextWrapping="Wrap" Text="On" Width="20" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
			</Button>
			<Label x:Name="lb_livebroadcast_on" Content="On" HorizontalAlignment="Left" Margin="54,16.193,0,0" VerticalAlignment="Top" Grid.Column="1" FontWeight="Bold"/>
			<Button x:Name="bt_livebroadcast_off" Margin="94.266,21.193,0,0" TouchDown="bt_livebroadcast_off_Click" Click="bt_livebroadcast_off_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1">
				<Button.Template>
					<ControlTemplate TargetType="{x:Type Button}">
						<ContentPresenter />
					</ControlTemplate>
				</Button.Template>
				<TextBlock TextWrapping="Wrap" Text="Off" Width="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
			</Button>
			<Label x:Name="lb_livebroadcast_off" HorizontalAlignment="Left" Margin="90.361,16.193,0,0" VerticalAlignment="Top" Content="Off" Grid.Column="1" FontWeight="Bold" Visibility="Hidden"/>
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="F5" VerticalAlignment="Top" FontStyle="Italic" Margin="59,44.153,0,0" Grid.Column="1" Visibility="Hidden"/>
			<TextBlock HorizontalAlignment="Left" Margin="100.23,44.153,0,0" TextWrapping="Wrap" Text="F6" VerticalAlignment="Top" FontStyle="Italic" Grid.Column="1" Visibility="Hidden"/>
			<CheckBox x:Name="cb_broadcast_movement" Content="mouse movement" HorizontalAlignment="Left" Margin="2.203,42.153,0,0" VerticalAlignment="Top" IsChecked="{Binding broadcastMouseMovement, Mode=TwoWay}" Checked="cb_broadcast_movement_Checked" Grid.ColumnSpan="2" Unchecked="cb_broadcast_movement_Unchecked"/>
		</Grid>
		<Button x:Name="bt_remove" Margin="586,159,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Orange" Click="bt_remove_Click" Content="Remove" FontSize="18.667" Cursor="Hand" FontWeight="Bold" />
		<Button x:Name="bt_reconnect" Margin="586,37,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Orange" Click="bt_reconnect_Click" Content="Reconnect" Cursor="Hand" FontSize="18.667" FontWeight="Bold" />
		<Label Content="ShivaQE" HorizontalAlignment="Left" Height="57.83" Margin="65,109.17,0,0" VerticalAlignment="Top" Width="136" FontSize="32" FontWeight="Bold"/>
		<Button x:Name="bt_record" Margin="621.356,222.312,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Click="bt_record_Click" Visibility="Hidden">
			<Button.Template>
				<ControlTemplate TargetType="{x:Type Button}">
					<ContentPresenter />
				</ControlTemplate>
			</Button.Template>
			<TextBlock HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="Record" VerticalAlignment="Top" FontSize="18.667" Grid.RowSpan="2" Background="White" />
		</Button>
		<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" x:Name="svg_logo" Stretch="Uniform" Margin="25.666,12.006,486.616,143.164">
