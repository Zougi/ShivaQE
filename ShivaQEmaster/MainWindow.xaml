<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:ShivaQEmaster" mc:Ignorable="d" x:Class="ShivaQEmaster.MainWindow"
        Title="ShivaQE" Height="342" Width="725" ResizeMode="CanMinimize" BorderThickness="1" BorderBrush="DarkOrange" WindowTitleBrush="#FF020202" WindowTransitionsEnabled="False">
    <Controls:MetroWindow.Resources>
        <local:MainWindowBindings x:Key="MainWindowBindingsDataSource" d:IsDataSource="True"/>
    </Controls:MetroWindow.Resources>
	<Controls:MetroWindow.RightWindowCommands>
		<Controls:WindowCommands>
		    <Button x:Name="bt_help" Click="bt_help_Click" Content="Help" />
		</Controls:WindowCommands>		
	</Controls:MetroWindow.RightWindowCommands>
    <Grid DataContext="{Binding Source={StaticResource MainWindowBindingsDataSource}}">
		<ListView BorderBrush="#FFFBA92C" BorderThickness="1" x:Name="lv_slaves" HorizontalAlignment="Left" Height="276.009" Margin="216.551,25.83,0,0" VerticalAlignment="Top" Width="342.812" ItemsSource="{Binding slaves, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Multiple">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" >
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
				<GridView>
					<GridViewColumn Header="Ip" Width="95">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding ipAddress}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Name" Width="145">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding name}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Status" Width="90">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding status}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
        <Controls:ToggleSwitch x:Name="ts_broadcast" Header="Send mouse/keys" Margin="27.663,240.928,525.11,10" SwitchForeground="#FFFBA92C" Cursor="Hand" IsChecked="{Binding checked_broadcast}" IsCheckedChanged="ts_broadcast_IsCheckedChanged" />
		<Button x:Name="bt_remove" Margin="586,150,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF020202" Click="bt_remove_Click" Content="Remove" FontSize="18.667" Cursor="Hand" FontWeight="Bold" Foreground="White" Width="121" BorderBrush="#FFFBA92C" BorderThickness="1" />
		<Button x:Name="bt_reconnect" Margin="586,28,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF020202" Click="bt_reconnect_Click" Content="Reconnect" Cursor="Hand" FontSize="18.667" FontWeight="Bold" Foreground="White" Width="121" BorderBrush="#FFFBA92C" BorderThickness="1" />
		<Button x:Name="bt_record" Margin="621.356,222.312,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Click="bt_record_Click" Visibility="Hidden">
			<Button.Template>
				<ControlTemplate TargetType="{x:Type Button}">
					<ContentPresenter />
				</ControlTemplate>
			</Button.Template>
			<TextBlock HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="Record" VerticalAlignment="Top" FontSize="18.667" Grid.RowSpan="2" Background="White" />
		</Button>
		<Grid x:Name="gd_logo" Margin="10,10,502.282,105.006">
			<Label Content="ShivaQE" HorizontalAlignment="Left" Height="57.83" Margin="39.334,129.164,0,0" VerticalAlignment="Top" Width="136" FontSize="32" FontWeight="Bold"/>
			<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" x:Name="svg_logo" Stretch="Uniform" Margin="0,0,0,40.164">
