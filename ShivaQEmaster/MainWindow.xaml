		<Button x:Name="bt_disconnect" Margin="586,89,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF020202" Content="Disconnect" FontSize="18.667" Cursor="Hand" FontWeight="Bold" Foreground="White" Width="121" BorderBrush="#FFFBA92C" BorderThickness="1" Click="bt_disconnect_Click" />
		<Button x:Name="bt_add" Margin="586,265,0,0" Click="bt_add_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" Height="36.839" Width="121" Content="Add" FontSize="18.667" Cursor="Hand" FontWeight="Bold" Foreground="White" BorderBrush="#FFFBA92C" BorderThickness="1" />
		<Grid x:Name="gd_add" Visibility="{Binding window_add}">
			<Rectangle Fill="Black" HorizontalAlignment="Left" Height="312" Stroke="Black" VerticalAlignment="Top" Width="726" Opacity="0.56" Margin="0,0,-9,0"/>
			<GroupBox Header="Computer address on network" HorizontalAlignment="Left" VerticalAlignment="Top" Height="164" Width="430" Background="Black" BorderBrush="DarkOrange" Margin="151,71.928,0,0" Foreground="White">
				<Grid Margin="-4.837,-5.007,-4.996,-4.953" Background="White">
					<TextBox Controls:TextBoxHelper.Watermark="mypc.net or 10.42.4.2" x:Name="tb_host" HorizontalAlignment="Left" Height="23" Margin="162.672,8.991,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="243" Text="{Binding newSlaveIP}" KeyDown="tb_host_KeyDown" BorderBrush="#FFFBA92C"/>
					<Label Content="Hosname (or IP) :" HorizontalAlignment="Left" Margin="54.571,6.991,0,0" VerticalAlignment="Top"/>
					<TextBox Controls:TextBoxHelper.Watermark="mypc" x:Name="tb_name" HorizontalAlignment="Left" Height="23" Margin="162.672,42.031,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="243" Text="{Binding newSlaveName}" KeyDown="tb_name_KeyDown" BorderBrush="#FFFBA92C"/>
					<Label Content="Friendly name (optional) :" HorizontalAlignment="Left" Margin="10.655,40.031,0,0" VerticalAlignment="Top"/>
					<Button x:Name="bt_add_add" Margin="284.672,88.161,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" Height="36.839" Width="121" Content="Add" FontSize="18.667" Cursor="Hand" FontWeight="Bold" Foreground="White" Click="bt_add_add_Click" BorderBrush="#FFFBA92C" BorderThickness="1" />
				</Grid>
			</GroupBox>
			<Button x:Name="bt_close" Content="X" HorizontalAlignment="Left" Margin="550,72.928,0,0" VerticalAlignment="Top" Width="29.75" Height="25.62" Background="Black" Foreground="White" Click="bt_close_Click"/>
		</Grid>
	</Grid>
</Controls:MetroWindow>
